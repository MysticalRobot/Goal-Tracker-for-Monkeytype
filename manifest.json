{
  "manifest_version": 3,
  "name": "Goal Tracker for Monkeytype",
  "version": "1.0",
  "description": "A tool that helps users reach their daily typing goals on Monkeytype.",
  "homepage_url": "https://github.com/MysticalRobot/Goal-Tracker-for-Monkeytype",
  "browser_specific_settings": {
    "gecko": {
      "id": "{f3c0eabd-523c-4704-8601-9ac925c8613c}"
    }
  },
  "icons": {
    "48": "./icon.svg"
  },
  "action": {
    "default_icon": "./icon.svg",
    "default_title": "Monkeytype Goal Tracker",
    "default_popup": "./dist/index.html"
  },
  "background": {
    "scripts": ["./dist/background-script.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://monkeytype.com/*"],
      "js": ["./dist/update-theme.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://monkeytype.com/"],
      "js": ["./dist/count-typing.js"],
      "run_at": "document_end"
    }
  ],
 	"permissions": [
    "notifications",
    "tabs",
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "toggle the popup"
    }
  }
}
